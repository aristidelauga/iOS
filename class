print(aristide.adress)


class film {
    var movieName: String = "Thriller"
    var director: String = ""
    var year: Int = 1986
    var hero: String = "Mickael Jackson"
    var heroine: String = "Don't Know"
}

class Acteur: Personne {
    
    var filmography: film = film()
    
    func playedARole(in movie: String) {
    }
    
    func participationToAnAudition(for society: String) {
    }
    
}


let mattLeBlanc = Acteur(name: "Le Blanc", firstName: "Matt", gender: "Male", age: 42, adress: "47 Rue Evergreen Terrace", isMoving: false, isMarried: false, itIsBirthday: false)
mattLeBlanc.filmography.hero = "Joey Tribbiani"
print(mattLeBlanc.filmography.hero)

